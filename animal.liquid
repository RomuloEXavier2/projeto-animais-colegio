---
pagination:
  data: animais
  size: 1
  alias: animal
  addAllPagesToCollections: true
permalink: "/{{ animal.slug }}/index.html"
---
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ animal.nome }} - Projeto Conservação</title>
    <link rel="stylesheet" href="/css/style.css">
    </head>
<body>
    
    <div class="container">
        <div class="animal-detail">
            <h1>{{ animal.nome }}</h1>
            
            <p class="status-detail">Status de Conservação: 
                <span class="status" data-status="{{ animal.status }}">{{ animal.status }}</span>
            </p>

            <div class="detail-content">
                <div class="detail-image">
                    <img src="/img/{{ animal.imagem }}" alt="Imagem de {{ animal.nome }}">
                </div>
                <div class="detail-info">
                    <h2>Informação Detalhada</h2>
                    <p>{{ animal.informacao }}</p>
                </div>
            </div>
            
            <a href="/" class="back-link">← Voltar para a lista principal</a>

        </div>
    </div>
</body>
</html>